
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign In</title>
    <style type="text/css">
        a:link, a:visited {
          background-color: #f44336;
          color: white;
          padding: 14px 25px;
          text-align: center;
          text-decoration: none;
          display: inline-block;
        }
        a:hover, a:active {
          background-color: red;
        }
    </style>
</head>
<body>
    <!-- If the user is not authenticated, display the sign-in button -->
    <div class="signin">
        <h2>TC Hackathon Application</h2>
        <p>Please sign in using Microsoft Azure Active Directory:</p>
        <a href="@Url.Action("SignIn", "Home")">Sign In</a>
    </div>
</body>
</html>
